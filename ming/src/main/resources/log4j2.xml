<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <!-- 定义通用的属性 -->
    <Properties>
        <!-- 日志level :: date::class+method：： thread ：： error info-->
        <Property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss} %-5p thread[%thread] %l %msg %n
        </Property><!-- 定义统一的日志输出格式 -->
        <!-- 高亮控制台输出  -->
        <Property name="log_pattern_highlight">%highlight{${log_pattern}}{FATAL=Bright Red, ERROR=Magenta, WARN=Cyan,
            INFO=Green, DEBUG=Yellow, TRACE=Bright Blue}
        </Property>
    </Properties>

    <Appenders>
        <GlobalLogAppender name="mingLogAppender"/>
        <!-- 控制台输出  -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log_pattern_highlight}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <!--输出到控制台-->
            <appender-ref ref="console"/>
            <AppenderRef ref="mingLogAppender"/>
        </Root>
    </Loggers>
</Configuration>